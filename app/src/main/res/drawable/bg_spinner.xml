<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorOffWhite" />
            <corners android:radius="@dimen/corner_radius_xlarge" />
            <stroke android:color="@color/colorAccent"
                android:width="1dp">
            </stroke>
            <padding android:left="@dimen/padding_medium"></padding>
            <padding android:right="@dimen/padding_medium"></padding>
            <padding android:top="@dimen/padding_medium"></padding>
            <padding android:bottom="@dimen/padding_medium"></padding>
        </shape>
    </item>
    <item
        android:right="@dimen/padding_large"
        android:left="@dimen/padding_large">
        <bitmap
            android:gravity="right|center_vertical"
            android:src="@drawable/ic_action_down_arrow"
            android:tint="@color/colorBlack">

        </bitmap>
    </item>
</layer-list>