<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginEnd="@dimen/margin_medium"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/corner_radius_large">

    <RelativeLayout
        android:id="@+id/relativelayout_news_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_xlarge"
        android:paddingRight="@dimen/padding_xlarge"
        android:paddingTop="@dimen/padding_medium">

        <TextView
            android:id="@+id/textview_news_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_news_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_news_headline"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/textview_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_15"
            android:textStyle="italic|bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>