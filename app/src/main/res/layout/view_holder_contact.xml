<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:elevation="@dimen/elevation_medium"
    android:orientation="vertical"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_medium">

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:paddingStart="@dimen/padding_large"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:paddingStart="@dimen/padding_large"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_15"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandable_area_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_large"
        android:paddingTop="@dimen/padding_medium"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_contact_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:drawablePadding="@dimen/padding_large"
            android:drawableTint="@color/colorAccentDark"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/tv_contact_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:drawablePadding="@dimen/padding_large"
            android:drawableTint="@color/colorAccentDark"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/tv_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/padding_large"
            android:drawableTint="@color/colorAccentDark"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            tools:targetApi="m" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack" />

</LinearLayout>